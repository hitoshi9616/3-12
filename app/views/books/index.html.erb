<p class="flash">
<%= flash[:notice]%>
</p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %><td>
      <td><%= book.body %><td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => 'Are you sure?' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="errors">
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

<div class="create">
  <div>Title</div>
  <%= f.text_field :title %>
</div>
<div class="create">
  <div>Body</div>
  <%= f.text_area :body %>
</div>
<div class="create"><%= f.submit 'Create Book' %></div>

<% end %>